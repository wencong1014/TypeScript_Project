  "compilerOptions": {
    "target": "es2016", //编译后JS版本（ES3/ES5/ES6+）
    "module": "commonjs", //编译规范（CommonJS/ESNext/AMD）
    "outDir": "./dist", //编译后JS文件输出目录
    "rootDir": "./src", //TS源码目录
    "strict": true, //开启严格模式（强烈推荐，强制类型校验）
    "esModuleInterop": true, //兼容CommonJS和ESM模块
  },
  "include": ["./src/**/*"], //编译文件范围（默认包含所有ts文件）
  "exclude": ["node_modules"] //排除文件范围（默认不包含node_modules）
}
